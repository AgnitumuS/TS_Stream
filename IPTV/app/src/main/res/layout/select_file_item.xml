<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_file_item_rl_height">

        <ImageView
            android:id="@+id/iv_file_ic"
            android:layout_width="@dimen/select_file_item_file_ic_iv_width"
            android:layout_height="@dimen/select_file_item_file_ic_iv_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_little"
            android:src="@drawable/ic_file" />

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_micro"
            android:layout_toRightOf="@+id/iv_file_ic"
            android:textColor="@color/select_file_item_text_color"
            android:textSize="@dimen/select_file_item_text_size" />

        <ImageView
            android:id="@+id/iv_check_update"
            android:layout_width="@dimen/select_file_item_arrow_right_iv_width"
            android:layout_height="@dimen/select_file_item_arrow_right_iv_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_little"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_micro_little"
        android:background="@color/select_file_item_line_color" />

</LinearLayout>