<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/favorite_actionbar_rl_height"
        android:background="@color/colorRed"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_favorite_back"
            android:layout_width="@dimen/favorite_back_iv_width"
            android:layout_height="@dimen/favorite_back_iv_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_micro_little"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_favorite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/favorite_tv_title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_micro" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_favorite_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>