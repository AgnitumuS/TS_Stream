<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_file_popup_window_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_loading_animation"
            android:layout_width="@dimen/select_file_popup_window_iv_width"
            android:layout_height="@dimen/select_file_popup_window_iv_height"
            android:src="@drawable/pic_loading" />

        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro_little"
            android:text="@string/select_file_popup_tv_waiting"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_micro" />

    </LinearLayout>

</RelativeLayout>