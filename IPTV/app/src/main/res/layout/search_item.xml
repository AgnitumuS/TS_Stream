<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_item_tv_height"
        android:background="@drawable/search_item_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_little_little"
        android:paddingRight="@dimen/padding_little_little">

        <TextView
            android:id="@+id/tv_search_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_tv_history"
            android:textColor="@color/search_item_text_color"
            android:textSize="@dimen/search_item_text_size" />

    </LinearLayout>


</LinearLayout>